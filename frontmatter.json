{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "hugo",
  "frontMatter.content.publicFolder": "static",
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.taxonomy.alignFilename": true,
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "slugTemplate": "{{title}}",
      "filePrefix": "",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Translation Key",
          "name": "translationKey",
          "type": "string"
        },
        {
          "title": "Is draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        }
      ]
    }
  ],
  "frontMatter.content.pageFolders": [
    {
      "title": "English",
      "defaultLocale": "en",
      "path": "[[workspace]]/content/en"
    },
    {
      "title": "French",
      "defaultLocale": "fr",
      "path": "[[workspace]]/content/fr"
    }
  ],
  "frontMatter.content.snippets": {
    "GCDS - Notice": {
      "description": "",
      "body": [
        "{{% notice type=\"[[Type]]\" title=\"[[Title]]\" %}}",
        "[[Content]]",
        "{{% /notice %}}"
      ],
      "fields": [
        {
          "name": "Type",
          "title": "Type",
          "type": "choice",
          "single": true,
          "default": "info",
          "choices": [
            "info",
            "warning",
            "danger",
            "success"
          ]
        },
        {
          "name": "Title",
          "title": "Title",
          "type": "string",
          "single": true,
          "default": "Note"
        },
        {
          "name": "Content",
          "title": "Content",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "Translation Note": {
      "description": "",
      "body": "{{< translation-note >}}",
      "fields": []
    }
  }
}